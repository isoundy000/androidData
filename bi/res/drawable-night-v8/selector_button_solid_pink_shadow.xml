<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <gradient android:startColor="#44999999" android:endColor="#44999999" android:angle="90.0" android:centerColor="#44999999" />
                </shape>
            </item>
            <item android:bottom="1.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <solid android:color="@color/theme_color_secondary_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <gradient android:startColor="#44999999" android:endColor="#44999999" android:angle="90.0" android:centerColor="#44999999" />
                </shape>
            </item>
            <item android:bottom="1.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <solid android:color="@color/theme_color_secondary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>