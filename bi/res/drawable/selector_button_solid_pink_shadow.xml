<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <gradient android:startColor="#ffa9a09d" android:endColor="#ffd5d5d5" android:angle="90.0" android:centerColor="#ffbbbbbb" />
                </shape>
            </item>
            <item android:bottom="1.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <solid android:color="@color/theme_color_primary_dark" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <gradient android:startColor="#ffa9a09d" android:endColor="#ffd5d5d5" android:angle="90.0" android:centerColor="#ffbbbbbb" />
                </shape>
            </item>
            <item android:bottom="1.5dip">
                <shape android:shape="rectangle">
                    <corners android:radius="4.0dip" />
                    <solid android:color="@color/theme_color_primary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>