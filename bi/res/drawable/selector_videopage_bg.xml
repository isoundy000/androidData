<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="3.0dip" />
            <padding android:left="@dimen/item_spacing" android:top="@dimen/item_half_spacing" android:right="@dimen/item_spacing" android:bottom="@dimen/item_half_spacing" />
            <stroke android:width="1.0dip" android:color="@color/theme_color_secondary" />
            <solid android:color="@color/theme_color_view_background" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="3.0dip" />
            <padding android:left="@dimen/item_spacing" android:top="@dimen/item_half_spacing" android:right="@dimen/item_spacing" android:bottom="@dimen/item_half_spacing" />
            <stroke android:width="1.0dip" android:color="@color/theme_color_secondary" />
            <solid android:color="@color/theme_color_view_background" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="3.0dip" />
            <stroke android:width="1.0dip" android:color="@color/gray_lighter" />
            <padding android:left="@dimen/item_spacing" android:top="@dimen/item_half_spacing" android:right="@dimen/item_spacing" android:bottom="@dimen/item_half_spacing" />
            <solid android:color="@color/theme_color_view_background" />
        </shape>
    </item>
</selector>