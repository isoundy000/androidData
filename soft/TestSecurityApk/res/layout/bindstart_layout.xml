<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        <ImageView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/vqs_back4"
		    />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back5"
            >

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/bs_back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/vqs_fanhui" />

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定账号"
                android:src="@drawable/logo"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="绑定后可以获得更多游戏权益"
                android:textColor="#ffffff" />

        <Button
            android:id="@+id/bs_bind"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:textSize="14dp"
            android:textColor="#ffffff"
            android:background="@drawable/buttonback"
            android:text="绑定并注册" />

        <RelativeLayout 
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/bs_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vqs_denglu3"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="下次再说"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff" />
</RelativeLayout>
 </LinearLayout>
 <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back3" >


            <TextView
                 android:visibility="invisible"
                android:id="@+id/bindstart_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text="免费下载"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>