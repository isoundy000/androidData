<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back1" >

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/logo"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back2"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/editback1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="账号："
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/editback3"
                    android:digits="@string/abc"
                    android:gravity="center_vertical"
                    android:hint="手机号/用户名"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textColor="#859098"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/editback1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="密码："
                    android:textColor="#ffffff"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/editback3"
                    android:digits="@string/abc"
                    android:hint="请输入密码"
                    android:maxLength="12"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="14dp" />
            </LinearLayout>

            <Button
                android:id="@+id/login_login"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/buttonback"
                android:text="登录游戏"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" >

                <TextView
                    android:id="@+id/login_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/vqs_denglu3"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="急速登录"
                    android:textColor="#FEAC24" />

                <TextView
                    android:id="@+id/login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/vqs_denglu2"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="快速注册"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vqs_back3" >

            <TextView
                android:id="@+id/login_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="3dp"
                android:text="免费下载"
                android:textColor="#000000"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>