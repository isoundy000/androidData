<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/main_rl"
        android:layout_width="wrap_content"
        android:layout_height="60dp" >
        <RelativeLayout
            android:id="@+id/image_rl"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:src="@drawable/zhifubao_vqs" />

            <ImageView
                android:id="@+id/xuanzhong"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/xuanzhong_vqs" />
        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/name_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_rl"
            android:text="支付宝"
            android:textSize="18dp"
            android:textColor="#000000" />
    </RelativeLayout>
 	<TextView
 	    android:id="@+id/name_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/main_rl"
            android:text="支付宝"
            android:textSize="18dp"
            android:textColor="#000000" />
</RelativeLayout>