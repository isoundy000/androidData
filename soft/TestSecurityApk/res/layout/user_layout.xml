<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:scrollbars="@null"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#4CAEF9" >

            <TextView
                android:id="@+id/user_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/vqs_fanhui"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="用户中心"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/usericon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/vqs_touming" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/usericon"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/usericon"
                android:gravity="center_vertical"
                android:textColor="#040404" />

            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/username"
                android:layout_below="@+id/username"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:textColor="#9C9C9C"
                android:textSize="12dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/userid"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/usericon"
                android:background="#EDEDED" />

            <RelativeLayout
                android:id="@+id/userinfo_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/usericon"
                android:layout_marginBottom="3dp"
                android:layout_toRightOf="@id/usericon" >

                <TextView
                    android:id="@+id/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FF0000"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/coin"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/coin"
                    android:text="456币"
                    android:textColor="#9C9C9C"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/vqs_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#4CAEF9"
                    android:padding="3dp"
                    android:text="点击充值"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#EDEDED" />



        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical" >

            <TextView
                android:visibility="gone"
                android:id="@+id/user_share"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/vqs_share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="分享赚钱"
                android:textColor="#040404" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />
            <TextView
                android:id="@+id/user_change"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/vqs_change"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="#040404" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <TextView
                android:id="@+id/user_bind"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/vqs_bind"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="安全绑定"
                android:textColor="#040404" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <TextView
                android:id="@+id/user_service"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/vqs_service"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="客服中心"
                android:textColor="#040404" />
        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#EDEDED" />

        <LinearLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/user_down"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/vqs_down"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="安装456助手"
                android:textColor="#040404" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/user_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="退出账号"
            android:textColor="#999999" />
    </LinearLayout>

</ScrollView>